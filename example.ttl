@prefix :         <http://fairdatapoint.org/> .
@prefix dash:     <http://datashapes.org/dash#> .
@prefix dcat:     <http://www.w3.org/ns/dcat#> .
@prefix dct:      <http://purl.org/dc/terms/> .
@prefix foaf:     <http://xmlns.com/foaf/0.1/> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh:       <http://www.w3.org/ns/shacl#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .

:ResourceShape a sh:NodeShape ;
  sh:targetClass dcat:Resource ;
  sh:property [
    sh:path dct:title ;
    sh:nodeKind sh:Literal ;
    sh:name "Title"@en ;
    sh:description "A name given to the resource."@en ;
    sh:minCount 1 ;
    sh:maxCount  1 ;
    dash:editor dash:TextFieldEditor ;
    sh:group :GroupGenInfo ;
    sh:order 0 ;
  ], [
    sh:path dct:description ;
    sh:nodeKind sh:Literal ;
    sh:name "Description"@en ;
    sh:description "A free-text account of the resource."@en ;
    sh:maxCount 1 ;
    dash:editor dash:TextAreaEditor ;
    sh:group :GroupGenInfo ;
    sh:order 1 ;
  ], [
    sh:path dct:issued ;
    sh:datatype xsd:dateTime ;
    sh:name "Release Date"@en ;
    sh:description "Date of formal issuance (e.g., publication) of the resource."@en ;
    sh:maxCount 1 ;
    dash:editor dash:DatePickerEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:group :GroupGenInfo ;
    sh:order 2 ;
  ], [
    sh:path dct:modified ;
    sh:datatype xsd:dateTime ;
    sh:name "Update Date"@en ;
    sh:description "Most recent date on which the resource was changed, updated or modified."@en ;
    sh:maxCount 1 ;
    dash:editor dash:DatePickerEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:group :GroupGenInfo ;
    sh:order 3 ;
  ], [
    sh:path dct:language ;
    sh:nodeKind sh:IRI ;
    sh:name "Language"@en ;
    sh:description "A language of the resource. This refers to the natural language used for textual metadata (i.e., titles, descriptions, etc.) of a cataloged resource (i.e., dataset or service) or the textual values of a dataset distribution. Ex: http://id.loc.gov/vocabulary/iso639-1/en"@en ;
    sh:defaultValue <http://id.loc.gov/vocabulary/iso639-1/en> ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
    sh:group :GroupGenInfo ;
    sh:order 4 ;
  ], [
    sh:path dct:identifier ;
    sh:nodeKind sh:Literal ;
    sh:name "Identifier"@en ;
    sh:description "A unique identifier of the resource being described or cataloged."@en ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:group :GroupGenInfo ;
    sh:order 5 ;
  ], [
    sh:path dcat:theme ;
    sh:nodeKind sh:IRI ;
    sh:name "Theme"@en ;
    sh:description "A main category of the resource. A resource can have multiple themes."@en ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
    sh:group :GroupGenInfo ;
    sh:order 6 ;
  ], [
    sh:path dcat:keyword ;
    sh:nodeKind sh:Literal ;
    sh:name "Keyword"@en ;
    sh:description "A keyword or tag describing the resource."@en ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:group :GroupGenInfo ;
    sh:order 7 ;
  ], [
    sh:path dct:type ;
    sh:nodeKind xsd:IRI ;
    sh:name "Type"@en ;
    sh:description "The nature or genre of the resource. The value SHOULD be taken from a well governed and broadly recognised controlled vocabulary."@en ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
    sh:group :GroupGenInfo ;
    sh:order 8 ;
  ], [
    sh:path dcat:landingPage ;
    sh:nodeKind xsd:IRI ;
    sh:name "Landing page"@en ;
    sh:description "A Web page that can be navigated to in a Web browser to gain access to the catalog, a dataset, its distributions and/or additional information."@en ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
    sh:group :GroupGenInfo ;
    sh:order 9 ;
  ], [
    sh:path dct:creator ;
    sh:node :AgentShape ;
    sh:name "Creator"@en ;
    sh:description "The entity responsible for producing the resource."@en ;
    dash:editor dash:DetailsEditor ;
    sh:group :Provenance ;
    sh:order 0 ;
  ], [
    sh:path dct:publisher ;
    sh:node :AgentShape ;
    sh:name "Publisher"@en ;
    sh:description "The entity responsible for making the resource available."@en ;
    dash:editor dash:DetailsEditor ;
    sh:group :Provenance ;
    sh:order 1 ;
  ], [
    sh:path dct:license ;
    sh:nodeKind sh:IRI ;
    sh:name "License"@en ;
    sh:description "A legal document under which the resource is made available."@en ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
    sh:defaultValue <http://purl.org/NET/rdflicense/cc-zero1.0> ;
    sh:order 6 ;
  ], [
    sh:path dcat:version ;
    sh:name "version" ;
    sh:nodeKind sh:Literal ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:order 4 ;
  ], [
    sh:path dct:rights ;
    sh:nodeKind sh:IRI ;
    sh:maxCount 1 ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
    sh:order 7 ;
  ] .

# Nested Shapes
:AgentShape a sh:NodeShape ;
  sh:targetClass foaf:Agent ;
  sh:property [
    sh:path foaf:name ;
    sh:nodeKind sh:Literal ;
    sh:name "Name"@en ;
    sh:description "The name of the agent (person or organization)"@en ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:order 0 ;    
  ], [
    sh:path foaf:mbox ;
    sh:nodeKind sh:IRI ;
    sh:name "Email"@en ;
    sh:description "The mailbox associated with this agent."@en ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:labelViewer ;
    sh:order 1 ;
  ] .
  
# SHACL Groups
:GroupGenInfo a sh:PropertyGroup ;
  sh:order 0 ;
  rdfs:label "General Information"@en .
  
:Provenance a sh:PropertyGroup ;
  sh:order 1 ;
  rdfs:label "Provenance"@en .